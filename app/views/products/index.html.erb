<p id="notice"><%= notice %></p>
<div class="col-md-12">
<h1>Products</h1>
<br>
<div class="table-responsive">
<table class="table">
  <thead>
    <tr class="heading">
      <th>Productname</th>
      <th>Supplierid</th>
      <th>Categoryid</th>
      <th>Quantityperunit</th>
      <th>Unitprice</th>
      <th>Unitsinstock</th>
      <th>Unitsonorder</th>
      <th>Reorderlevel</th>
      <th>Discontinued</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr class="table-condensed">
        <td><%= product.ProductName %></td>
        <td><%= product.SupplierId %></td>
        <td><%= product.CategoryId %></td>
        <td><%= product.QuantityPerUnit %></td>
        <td><%= product.UnitPrice %></td>
        <td><%= product.UnitsInStock %></td>
        <td><%= product.UnitsOnOrder %></td>
        <td><%= product.ReorderLevel %></td>
        <td><%= product.Discontinued %></td>
        <td><%= link_to 'Show', product, class: "btn btn-lg btn-primary" %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-lg btn-warning" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-lg btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>

<%= link_to 'New Product', new_product_path %>
